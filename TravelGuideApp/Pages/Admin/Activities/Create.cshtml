@page
@model TravelGuideApp.Pages.Admin.Activities.CreateModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>Activity</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Activity.Name" class="control-label"></label>
                <input asp-for="Activity.Name" class="form-control" />
                <span asp-validation-for="Activity.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Activity.genre" class="control-label"></label>
                <input asp-for="Activity.genre" class="form-control" />
                <span asp-validation-for="Activity.genre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Activity.prix" class="control-label"></label>
                <input asp-for="Activity.prix" class="form-control" />
                <span asp-validation-for="Activity.prix" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Activity.TouristicSiteID" class="control-label"></label>
                <select asp-for="Activity.TouristicSiteID" class ="form-control" asp-items="ViewBag.TouristicSiteID"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

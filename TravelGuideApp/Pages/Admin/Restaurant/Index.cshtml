@model TravelGuideApp.Pages.Admin.Restaurant.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Restaurant[0].InHotel)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Restaurant[0].cuisineType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Restaurant[0].Telephone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Restaurant[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Restaurant[0].IdAddress)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Restaurant[0].IdHotel)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Restaurant[0].IdTouristicSite)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Restaurant[0].Url)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Restaurant[0].description)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Restaurant) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.InHotel)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.cuisineType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telephone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdAddress)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdHotel)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdTouristicSite)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Url)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.description)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

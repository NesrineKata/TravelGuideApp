@page
@model TravelGuideApp.Pages.Admin.Room.EditModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>Room</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Room.Id" />
            <div class="form-group">
                <label asp-for="Room.Num" class="control-label"></label>
                <input asp-for="Room.Num" class="form-control" />
                <span asp-validation-for="Room.Num" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Room.TypeRoom" class="control-label"></label>
                <input asp-for="Room.TypeRoom" class="form-control" />
                <span asp-validation-for="Room.TypeRoom" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Room.Price" class="control-label"></label>
                <input asp-for="Room.Price" class="form-control" />
                <span asp-validation-for="Room.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Room.HotelID" class="control-label"></label>
                <select asp-for="Room.HotelID" class="form-control" asp-items="ViewBag.HotelID"></select>
                <span asp-validation-for="Room.HotelID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

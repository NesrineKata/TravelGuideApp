@page
@model TravelGuideApp.Pages.TouristicSite.TSDetailsModel
@{
}
<div class="container bootdey">
<div class="col-md-12">
    <section class="panel">
        <div class="panel-body">
            <div class="col-md-6">
                <div class="pro-img-details">
                    <img src="@Model.Ts.Url" alt="">
                </div>


            </div>
            <div class="col-md-6">
                <h4 class="pro-d-title">
                    <a href="#" class="">
                        @Model.Ts.Name
                    </a>
                </h4>
                <div class="reviews">
                    <p>
                       
                            <i class="fa fa-star star-rating"></i>
                        
                        <a href="javascript:void(0);">109 customer reviews</a>

                    </p>
                </div>
                <hr />
                <div class="description description-tabs">
                    <ul id="myTab" class="nav nav-pills">
                        <li class="active"><a href="#more-information" data-toggle="tab" class="no-margin">Product Description </a></li>
                        <li class=""><a href="#specifications" data-toggle="tab">Specifications</a></li>
                        <li class=""><a href="#reviews" data-toggle="tab">Reviews</a></li>
                    </ul>
                    <div id="myTabContent" class="tab-content">
                        <div class="tab-pane fade active in" id="more-information">
                            <br />
                            <strong>@Model.Ts.Name</strong>
                            <p>
                                @Model.Ts.description
                            </p>
                        </div>
                        <div class="tab-pane fade" id="specifications">
                            <br />
                            @foreach (var m in Model.Activity) {
                            <dl class="">
                                <dt>Activity: @m.Name</dt>
                                <dd>Genre : @m.genre</dd>
                                <dd>Price : @m.prix</dd>
                                
                                <br />
                            </dl>
                            }
                        </div>
                        <div class="tab-pane fade" id="reviews">
                            <br />
                            <form method="post" class="well padding-bottom-10">

                                <input asp-for="r.Name" placeholder="Enter your Name">
                                <br />
                                <textarea rows="2" asp-for="r.feedback" class="form-control" placeholder="Write a review"></textarea>
                                <input asp-for="r.touristicSiteId" value=@Model.Ts.Id hidden>
                                <!-- <input asp-for="r.Date" value= hidden>-->

                                <div class="margin-top-10">
                                    <button type="submit" class="btn btn-sm btn-primary pull-right">
                                        Submit Review
                                    </button>
                                </div>
                            </form>

                            <div class="chat-body no-padding profile-message">
                                <ul>
                                    @foreach (var r in Model.reviews)
                                    {
                                        <li class="message">
                                            <img src="https://bootdey.com/img/Content/avatar/avatar1.png" width="50" height="60" class="online" />
                                            <span class="message-text">
                                                <a href="javascript:void(0);" class="username">
                                                    @r.Name

                                                    <span class="pull-right">
                                                        @for (int i = 0; i < r.review; i++)
                                                        {
                                                            <i class="fa fa-star fa-2x text-primary"></i>
                                                        }
                                                    </span>
                                                </a>
                                                @r.feedback
                                            </span>
                                            <ul class="list-inline font-xs">

                                                <li class="pull-right">
                                                    <small class="text-muted pull-right ultra-light"> Posted:@r.Date </small>
                                                </li>
                                            </ul>
                                        </li>
                                        <br />
                                    }
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
                <hr />


            </div>
        </div>
    </section>
</div>
</div>